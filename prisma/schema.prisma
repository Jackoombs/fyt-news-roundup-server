generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator tsed {
  provider = "tsed-prisma"
}

model Article {
  id            String  @id @default(uuid())
  title         String?
  category      String?
  outlet        Outlet  @relation(fields: [outletId], references: [id])
  outletId      String
  summary       String?
  content       String?
  condensedBody String?
  link          String  @unique
  saved         Boolean @default(false)
  keywords      String[]

  count Int       @default(1)
  date  DateTime? @default(now())
}

model Outlet {
  id       String    @id @default(uuid())
  name     String    @unique
  articles Article[]
  urls     String[]
  baseUrl  String
}
